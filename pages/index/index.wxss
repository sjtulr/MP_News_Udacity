/**index.wxss**/
.title-list {
  display: flex;
  background-color: #00a2ff;
  padding: 20rpx;
}

.title-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  margin: 0 10rpx;
  padding: 0 10rpx;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.8);
}

.news-list {
  margin: 20rpx 10rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 20rpx;
}

.news-card {
  display: flex;
  align-items: center;
  height: 200rpx;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}

.news-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.news-title {
  font-size: 32rpx;
  line-height: 40rpx;
  color: rgba(29, 29, 38, 0.9);
}

.news-info-line {
  display: flex;
}

.news-source {
  flex: 1;
  margin-top: 20rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  color: rgba(29, 29, 38, 0.9);
}

.news-time {
  margin-top: 20rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  color: rgba(29, 29, 38, 0.9);
}

.news-image {
  flex-shrink: 0;
  margin: 20rpx;
  width: 200rpx;
  height: 150rpx;
}